# aiogram/telegram-bot-api 이미지 사용
FROM aiogram/telegram-bot-api:latest

# 포트 노출
EXPOSE 8080

# 기본 ENTRYPOINT 완전히 덮어쓰기
ENTRYPOINT ["/bin/sh", "-c"]

# 실행 (에러 출력 포함)
CMD ["echo 'Starting telegram-bot-api...' && echo 'API_ID:' $TELEGRAM_API_ID && echo 'PORT:' $PORT && exec telegram-bot-api --api-id=$TELEGRAM_API_ID --api-hash=$TELEGRAM_API_HASH --http-port=${PORT:-8080} --dir=/var/lib/telegram-bot-api 2>&1"]
